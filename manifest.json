{
  "manifest_version": 2,

  "name": "Platform Status Indicator",
  "description": "This extension adds an indicator that shows whether the page has listed in the platform statuses.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "browserAction/index.png",
    "default_popup": "browserAction/index.html"
  },
  "background": {
      "scripts": [
        "background/background.js"
      ]
  },
  "permissions": [
    "alarms",
    "idle",
    "storage",
    "tabs"
  ]
}
